<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="com.guozha.buyserver.persistence.mapper.MnuMenuGoodsMapper">

	<resultMap id="rm" type="com.guozha.buyserver.persistence.beans.MnuMenuGoods">
        <result property="menuGoodsId" jdbcType="INTEGER" column="MENU_GOODS_ID"/>
        <result property="menuId" jdbcType="INTEGER" column="MENU_ID"/>
        <result property="goodsId" jdbcType="INTEGER" column="GOODS_ID"/>
        <result property="goodsName" jdbcType="VARCHAR" column="GOODS_NAME"/>
        <result property="otherNames" jdbcType="VARCHAR" column="OTHER_NAMES"/>
        <result property="amount" jdbcType="INTEGER" column="AMOUNT"/>
	</resultMap>
	
	<select id="findByMenu" parameterType="java.lang.Integer" resultMap="rm">
	    SELECT * FROM MNU_MENU_GOODS T WHERE T.MENU_ID = #{menuId}
	</select>
	
</mapper>